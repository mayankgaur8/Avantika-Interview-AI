{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend: Dev Server",
      "type": "shell",
      "command": "npm run start:dev",
      "options": { "cwd": "${workspaceFolder}/backend" },
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "nestjs",
        "pattern": { "regexp": "^(.*)$", "message": 1 },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting compilation",
          "endsPattern": "Nest application successfully started"
        }
      },
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },
    {
      "label": "Frontend: Dev Server",
      "type": "shell",
      "command": "npm run dev",
      "options": { "cwd": "${workspaceFolder}/frontend" },
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "nextjs",
        "pattern": { "regexp": "^(.*)$", "message": 1 },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting Next.js",
          "endsPattern": "Ready in"
        }
      },
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },
    {
      "label": "Backend: Build",
      "type": "shell",
      "command": "npm run build",
      "options": { "cwd": "${workspaceFolder}/backend" },
      "group": { "kind": "build", "isDefault": false },
      "problemMatcher": ["$tsc"],
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Frontend: Build",
      "type": "shell",
      "command": "npm run build",
      "options": { "cwd": "${workspaceFolder}/frontend" },
      "group": { "kind": "build", "isDefault": false },
      "problemMatcher": ["$tsc"],
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Backend: Test",
      "type": "shell",
      "command": "npm run test",
      "options": { "cwd": "${workspaceFolder}/backend" },
      "group": { "kind": "test", "isDefault": true },
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Backend: Test Watch",
      "type": "shell",
      "command": "npm run test:watch",
      "options": { "cwd": "${workspaceFolder}/backend" },
      "group": "test",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },
    {
      "label": "Backend: Lint",
      "type": "shell",
      "command": "npm run lint",
      "options": { "cwd": "${workspaceFolder}/backend" },
      "group": "build",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Frontend: Lint",
      "type": "shell",
      "command": "npm run lint",
      "options": { "cwd": "${workspaceFolder}/frontend" },
      "group": "build",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Seed Database",
      "type": "shell",
      "command": "npx ts-node src/database/seed.ts",
      "options": { "cwd": "${workspaceFolder}/backend" },
      "group": "build",
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Docker: Start Infrastructure",
      "type": "shell",
      "command": "docker-compose up -d postgres redis judge0-server judge0-workers judge0-db judge0-redis",
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "Docker: Full Stack Up",
      "type": "shell",
      "command": "docker-compose up --build",
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },
    {
      "label": "Docker: Down",
      "type": "shell",
      "command": "docker-compose down",
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "ðŸš€ Start Dev (Backend + Frontend)",
      "dependsOn": ["Backend: Dev Server", "Frontend: Dev Server"],
      "dependsOrder": "parallel",
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    }
  ]
}
